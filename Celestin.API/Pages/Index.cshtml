<!DOCTYPE html>
<html>
<head>
    <title>List</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='./css/style-variables.css'>
    <link rel='stylesheet' href='./css/style-nav.css'>
    <link rel='stylesheet' href='./css/index-style.css'>
    <link rel='stylesheet' href='./css/style-base.css'>
    <link rel='stylesheet' href='./css/style-table.css'>
    @* <link rel='stylesheet' href='./css/style-select.css'> *@

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <script src="./js/index.js"></script>
    <div id='navbar'></div>
    <div class='container'>
        <h1>List</h1>
        <div class="loader" id='loader-container'></div>

        <div id="dynamic-content-container">
            <div class="search-container">
                <label for="searchSelect">Filter column:</label>
                <div@*  class="custom-select" *@>
                    <select name="searchSelect" id="searchSelect" onchange="toggleSearchInput()">
                        <option value="/GetCelestinsByName?name">Name</option>
                        <option value="/GetCelestinsByType?type">Type</option>
                    </select>
                </div>
                <div class="div-line"></div>
                <div class="search-input-container">
                    <i class="fa fa-search icon my-search-icon"></i>
                    <input type="text" id="searchInput" placeholder="Search for your data.." title="Type in a value">
                </div>
                <div id="checkboxesContainer" style="display: none;">
                <select name="searchType" id="searchType" onchange="toggleSearchType()">
                        <option value="planet">Planet</option>
                        <option value="Star">Stea</option>
                    <option value="BlackHole">BlackHole</option>
                    </select>
                </div>
                <button type="button" id="searchButton" onclick="fetchFilteredData()">Filter</button>
                </div>
            </div>
                
            <div id="table"></div>
        </div>
    </div>
    <script>
        function toggleSearchInput() {
            const searchSelect = document.getElementById('searchSelect');
            const searchInput = document.getElementById('searchInput');
            const checkboxesContainer = document.getElementById('checkboxesContainer');

            if (searchSelect.value === '/GetCelestinsByName?name') {
                searchInput.style.display = 'block';
                checkboxesContainer.style.display = 'none'; // Ascundem container-ul cu checkbox-uri
            } else if (searchSelect.value === '/GetCelestinsByType?type') {
                searchInput.style.display = 'none';
                checkboxesContainer.style.display = 'block'; // Afișăm container-ul cu checkbox-uri
            }
        }
        function toggleSearchType() {
            searchInput.value = document.getElementById('searchType').value;
            
        }
    </script>
</body>
</html>