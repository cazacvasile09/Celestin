@page
@model IndexModel
@{
    ViewData["Title"] = "View Details";
}
 
<!DOCTYPE html>
<html>
<head>
    <title>View details</title>
    <meta charset="UTF-8" />
    <link rel='stylesheet' href='./css/style-nav.css'>
    <link rel='stylesheet' href='./css/style-variables.css'>
    <link rel='stylesheet' href='./css/view-details-style.css'>
    <link rel='stylesheet' href='./css/style-base.css'>
</head>
<body>
<script src="./js/view-details.js"></script>
<div id='navbar'></div>
<div class='container'>
    <h1 id='heading-title'></h1>
    <div class="loader" id='loader-container'></div>
    <form id='form'>
        <div>
            <label for="input-name">Name:</label>
            <input type="text" id="input-name" name="name">
        </div>
        <div>
            <label for="input-mass">Mass:</label>
            <input type="number" id="input-mass" name="mass">
        </div>
        <div>
            <label for="input-diameter">Equatorial Diameter:</label>
            <input type="number" id="input-diameter" name="diameter">
        </div>
        <div>
            <label for="input-temperature">Surface temperature:</label>
            <input type="text" id="input-temperature" name="input-temperature">
        </div>
        <div>
            <label for="input-date">Discovery date:</label>
            <input type="text" id="input-date" name="input-date">
        </div>
        <input type="submit" value="Submit" id='input-submit'>
    </form>
</div>
</body>
</html>